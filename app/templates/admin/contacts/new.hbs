<h2>Add Contact</h2>

<div class="form-horizontal">
    <div class="form-group">
        <label class="col-sm-2 control-label">Email</label>
        <div class="col-sm-10">
            {{input type="text" value=model.email class="form-control" placeholder="Enter your email"}}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Message</label>
        <div class="col-sm-10">            
            {{textarea class="form-control" placeholder="Enter Message Here." value=model.message}}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default" {{action 'saveContact' model}}>Add to Contact list</button>
        </div>
    </div>
</div>